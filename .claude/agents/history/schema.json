{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent History Entry Schema",
  "description": "Standardized format for agent task execution history",
  "type": "object",
  "properties": {
    "agent": {
      "type": "string",
      "description": "Name of the agent that executed the task",
      "examples": ["test-writer-fixer", "rapid-prototyper", "ui-designer"]
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "context", "task", "files", "outcome"],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when task was executed"
          },
          "context": {
            "type": "object",
            "required": ["package"],
            "properties": {
              "package": {
                "type": "string",
                "description": "Package or app being worked on",
                "examples": ["apps/mobile", "packages/contracts", "packages/backend"]
              },
              "area": {
                "type": "string",
                "description": "Specific area within the package",
                "examples": ["authentication", "testing", "ui-components"]
              }
            }
          },
          "task": {
            "type": "object",
            "required": ["type", "description"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["create", "update", "fix", "improve", "refactor", "cleanup", "analyze"],
                "description": "Type of task performed"
              },
              "description": {
                "type": "string",
                "description": "Brief description of what was accomplished"
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Tags for categorizing and searching tasks"
              }
            }
          },
          "files": {
            "type": "object",
            "properties": {
              "modified": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Files that were modified"
              },
              "created": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Files that were created"
              },
              "analyzed": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Files that were read/analyzed"
              }
            }
          },
          "outcome": {
            "type": "object",
            "required": ["status"],
            "properties": {
              "status": {
                "type": "string",
                "enum": ["success", "partial", "failed", "blocked"],
                "description": "Result of the task execution"
              },
              "details": {
                "type": "string",
                "description": "Additional details about the outcome"
              },
              "follow_up_needed": {
                "type": "boolean",
                "description": "Whether additional work is required"
              },
              "issues_found": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Any issues discovered during task execution"
              }
            }
          },
          "metrics": {
            "type": "object",
            "description": "Optional metrics about task execution",
            "properties": {
              "duration_minutes": {
                "type": "number",
                "description": "Estimated time spent on task in minutes"
              },
              "tests_affected": {
                "type": "number",
                "description": "Number of tests created, modified, or fixed"
              },
              "coverage_impact": {
                "type": "string",
                "description": "Impact on test coverage",
                "examples": ["+5%", "-2%", "no change"]
              },
              "files_count": {
                "type": "number",
                "description": "Total number of files worked on"
              }
            }
          }
        }
      }
    }
  },
  "required": ["agent", "entries"]
}