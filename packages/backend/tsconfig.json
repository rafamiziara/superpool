{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "paths": {
      "@superpool/types/*": ["../types/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
