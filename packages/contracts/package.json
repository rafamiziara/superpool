  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@openzeppelin/hardhat-upgrades": "^3.5.0",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "chai": "^5.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.1",
