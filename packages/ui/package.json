{
  "name": "@superpool/ui",
  "version": "0.1.0",
  "description": "SuperPool shared UI components",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "src/index.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --config ../../eslint.config.mjs",
    "type-check": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "dependencies": {
    "@superpool/design": "workspace:*",
    "@superpool/types": "workspace:*",
    "clsx": "^2.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "superpool"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamiziara/superpool.git",
    "directory": "packages/ui"
  },
  "license": "MIT"
}
